<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="20dp"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/search_product_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangular_border"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/rating_and_review_rv_user_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circular_border"
                android:elevation="50dp" />

            <ImageView
                android:id="@+id/user_profile_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/user_ic"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rating_and_review_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:ems="12"
            android:maxLines="2"
            android:text="Nice Product"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/rating_and_review_rv_user_iv"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/search_rating_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="@+id/rating_and_review_tv"
            app:layout_constraintTop_toBottomOf="@+id/rating_and_review_tv">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/rating_and_review_user_name_tv"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toBottomOf="@+id/rating_and_review_tv">

                <RatingBar
                    android:id="@+id/rating_and_review_star_rb"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="#8BC34A"
                    android:rating="4"
                    android:stepSize="0.5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rating_and_review_star_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="4.5"
                    android:textColor="#8BC34A"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/rating_and_review_star_rb"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/rating_and_review_star_rb"
                    app:layout_constraintTop_toTopOf="@+id/rating_and_review_star_rb" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/rating_and_review_user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aatmik Mishra"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/search_rating_cv"
            app:layout_constraintTop_toBottomOf="@+id/search_rating_cv" />


        <TextView
            android:id="@+id/rating_and_review_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="Oct, 2021"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/rating_and_review_user_name_tv"
            app:layout_constraintStart_toEndOf="@+id/rating_and_review_user_name_tv"
            app:layout_constraintTop_toTopOf="@+id/rating_and_review_user_name_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>